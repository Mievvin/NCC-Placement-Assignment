@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

    <head>
        <link rel="stylesheet" href="~/css/site.css" />
    </head>

<h1 id="loginheader">@ViewData["Title"]</h1>
<div style="text-align: center" class="loginWrapper">
    <div class="row" id="loginrow">
        <div class="col-md-4">
            <section>
                <form id="account" method="post">
                    <h4 id="loginheader">Use a local account to log in</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Log in</button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a id="redirect-register" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">No account? Register here!</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
